    <% if (search) { %>
        <div class="modal" id="search">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <div class="modal-title">Resultados para: <%= search %></div>
                        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
    
                    <div class="modal-body d-flex flex-wrap justify-content-around">
                        <% if (foundR) { %>
                            <% for (let i in foundR) { %>
                                <div class="card text-center border-dark me-1 mt-1" style="width: 13rem;">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= foundR[i].name %> 
                                            <% if (foundR[i].hasPw) { %>
                                                <i class="bi bi-lock text-danger"></i>
                                            <% } else { %>
                                                <i class="bi bi-unlock text-success"></i>
                                            <% } %>
