                                        <% } %>
                                        
                                    </div>
            
                                    <div class="card-footer text-muted">
                                        <%= foundR[i].admin %>
                                    </div>
                                </div>
                            <% } %>
                        <% } else { %>
                            No se encontraron salas
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

