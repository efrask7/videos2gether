				<div class="modal-content">
					<div class="modal-header bg-primary text-white">
						<div class="modal-title">Resultados para: <%= search %>
						</div>
						<button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
					</div>

					<div class="modal-body d-flex flex-wrap justify-content-around">
						<% if (foundR) { %>
							<% for (let i in foundR) { %>
								<div class="card text-center border-dark me-1 mt-1" style="width: 13rem;">
									<div class="card-body">
										<h5 class="card-title">
											<%= foundR[i].name %>
												<% if (foundR[i].hasPw) { %>
													<i class="bi bi-lock text-danger"></i>
													<% } else { %>
														<i class="bi bi-unlock text-success"></i>
														<% } %>
										</h5>
										<p class="card-text">
											ID: <%= foundR[i].id %>
												<br>
												<i class="bi bi-person text-success"></i>
												<%= foundR[i].online %>
										</p>

										<% if (foundR[i].hasPw) { %>
											<button class="btn btn-outline-primary" type="button"
												onclick="showFormS('<%= foundR[i].id %>')">Entrar <i
													class="bi bi-box-arrow-in-right"></i></button>
											<% } else { %>
												<a href="/room?id=<%= foundR[i].id %>" class="btn btn-outline-primary">Entrar <i
														class="bi bi-box-arrow-in-right"></i></a>
												<% } %>

									</div>

									<div class="card-footer text-muted">
										<%= foundR[i].admin %>
									</div>
								</div>
								<% } %>
									<% } else { %>
										No se encontraron salas
										<% } %>
					</div>
				</div>
			</div>
		</div>

		<script>
			window.onload = () => new bootstrap.Modal(document.getElementById('search')).show();    
		</script>
		<% } %>

			<div class="modal" id="join">
				<div class="modal-dialog modal-dialog-centered">
					<div class="modal-content">
						<div class="modal-body">
							<form action="/room" method="get">

								<div class="row">
									<label for="roomIdM" class="col-3">ID de sala:</label>
									<div class="col-9">
										<input type="number" id="roomIdM" name="id" class="form-control" required disabled>
									</div>
								</div>

								<div class="row mt-2">
									<label for="roomPasswordM" class="col-3">Contraseña:</label>
									<div class="col-9">
										<input type="password" id="roomPasswordM" name="password" class="form-control"
											placeholder="Puedes dejarlo vacio" required>
									</div>
								</div>

								<button class="btn btn-primary" type="submit">Unirse</button>
						</div>
					</div>
				</div>
			</div>

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
			<script src="/assets/js/ejs.js"></script>
</body>

</html>