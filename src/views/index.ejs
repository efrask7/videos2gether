                <h1 class="display-4">Crea o unete a una sala</h1>

                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <button class="nav-link active" id="nav-create-tab" data-bs-toggle="tab" data-bs-target="#nav-create" type="button" role="tab" aria-controls="nav-create" aria-selected="true">Crear</button>

                        <button class="nav-link" id="nav-join-tab" data-bs-toggle="tab" data-bs-target="#nav-join" type="button" role="tab" aria-controls="nav-join" aria-selected="false">Unirse</button>
                    </div>
                </nav>

                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-create" role="tabpanel" aria-labelledby="nav-create-tab" tabindex="0">
                        
                        <form action="/room" method="post">
                            <div class="row mt-4">
                                <label for="newRoomName" class="col-3">Nombre de sala:</label>
                                <div class="col-9">
                                    <input type="text" id="newRoomName" name="name" class="form-control" required>
                                </div>
                            </div>
    
                            <div class="row mt-2">
                                <label for="newRoomPassword" class="col-3">Contraseña:</label>
                                <div class="col-9">
                                    <input type="password" id="newRoomPassword" name="password" class="form-control" placeholder="Puedes dejarlo vacio">
                                </div>
                            </div>
    
                            <button class="btn btn-primary" type="submit">Crear</button>
                        </form>
                    </div>

                    <div class="tab-pane fade" id="nav-join" role="tabpanel" aria-labelledby="nav-join-tab" tabindex="0">
                        
                        <form action="/room" method="get">

                            <div class="mt-2">
                                <button type="button" class="btn btn-link" id="btnName" disabled onclick="showName()">Nombre</button>
                                <button type="button" class="btn btn-link" id="btnId" onclick="showId()">ID</button>
                            </div>

                            <div class="row mt-4" id="divName">
                                <label for="roomName" class="col-3">Nombre de sala:</label>
                                <div class="col-9">
                                    <input type="text" id="roomName" name="name" class="form-control" required>
                                </div>
                            </div>

                            <div class="row mt-4 d-none" id="divId">
                                <label for="roomId" class="col-3">ID de sala:</label>
                                <div class="col-9">
                                    <input type="number" id="roomId" name="id" class="form-control" required>
                                </div>
                            </div>
    
                            <div class="row mt-2">
                                <label for="roomPassword" class="col-3">Contraseña:</label>
                                <div class="col-9">
                                    <input type="password" id="roomPassword" name="password" class="form-control" placeholder="Puedes dejarlo vacio">
                                </div>
                            </div>
    
                            <button class="btn btn-primary" type="submit">Unirse</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-4 offset-2 mt-2">
                <h6 class="display-5 fs-4">Lista de salas publicas</h6>

                <div class="list-group col-6">

                <% for (let i in rooms) {%>
                    <a href="/room?id=<%= rooms[i].id %>" class="list-group-item list-group-item-action d-flex">
                        <%= rooms[i].name %> <i class="bi bi-person ms-2 text-success"></i> <%= rooms[i].online%>
                        <i class="bi bi-box-arrow-in-right ms-auto text-primary"></i>
                    </a>

                <%}%>

                </div>

            </div>
        </div>
    </main>

    <div class="modal" id="modal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="err-title"></h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body" id="err-body">
                    <p id="err-text"></p>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="seePw" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Contraseña:</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
    
                <div class="modal-body" id="pwText"></div>
    
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="form-editPw" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar contraseña</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body">
                    <form action="/newPass" method="post" class="row row-cols-lg-auto g-3 align-items-center">
                        <div class="col-12">
                            <label for="editId" class="visually-hidden">ID:</label>
                            <div class="input-group">
                                <div class="input-group-text">#</div>
                                <input type="number" name="newId" id="editId" class="form-control" placeholder="ID:" readonly>
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="editNewPw" class="visually-hidden">Nueva contraseña:</label>
                            <div class="input-group">
                                <div class="input-group-text"><i class="bi bi-key"></i></div>
                                <input type="password" name="password" id="editNewPw" class="form-control" placeholder="Contraseña nueva:">
                            </div>
                        </div>

                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Cambiar</button>
                        </div>
                    </form>
                </div>

                <div class="modal-footer justify-content-start text-secondary">
                    Deja vacio el campo de la contraseña para hacer la sala publica
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="form-newPw" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Nueva contraseña para la sala</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body">
                    <form action="/newPass" method="post" class="row row-cols-lg-auto g-3 align-items-center">
                        <div class="col-12">
                            <label for="newId" class="visually-hidden">ID:</label>
                            <div class="input-group">
                                <div class="input-group-text">#</div>
                                <input type="number" name="newId" id="newId" class="form-control" placeholder="ID:" readonly>
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="NewPw" class="visually-hidden">Nueva contraseña:</label>
                            <div class="input-group">
                                <div class="input-group-text"><i class="bi bi-key"></i></div>
                                <input type="password" name="password" id="newPw" class="form-control" placeholder="Contraseña nueva:">
                            </div>
                        </div>

                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Cambiar</button>
                        </div>
                    </form>
                </div>

                <div class="modal-footer justify-content-start text-secondary">
                    Deja vacio el campo de la contraseña para hacer la sala publica
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="sure" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle text-warning"></i> ¿Estas segur@?</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body">
                    No puedes arrepentirte de borrar la sala
                </div>

                <div class="modal-footer">
                    <button class="btn btn-success" type="button" onclick="deleteRoom()">Si</button>
                    <button class="btn btn-danger" type="button" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="trash">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-check2 text-success"></i> Sala borrada!</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="trashErr">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle text-danger"></i> No se pudo borrar la sala</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="newPassword">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-check2 text-success"></i> Se cambio la contraseña de la sala</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="newPasswordErr">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle text-danger"></i> No se pudo cambiar la contraseña de la sala</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="form-editName" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar nombre</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body">
                    <form action="/newName" method="post" class="row row-cols-lg-auto g-3 align-items-center">
                        <div class="col-12">
                            <label for="newId" class="visually-hidden">ID:</label>
                            <div class="input-group">
                                <div class="input-group-text">#</div>
                                <input type="number" name="newId" id="newIdN" class="form-control" placeholder="ID:" readonly>
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="editNewName" class="visually-hidden">Nuevo nombre:</label>
                            <div class="input-group">
                                <div class="input-group-text"><i class="bi bi-cursor-text"></i></div>
                                <input type="text" name="name" id="editNewName" class="form-control" placeholder="Nombre nuevo:">
                            </div>
                        </div>

                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Cambiar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="newName">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-check2 text-success"></i> Se cambio el nombre de la sala</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="newNameErr">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle text-danger"></i> No se pudo cambiar el nombre de la sala</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/ejs.js"></script>
</body>
