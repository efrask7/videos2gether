                        <button class="btn"><i class="bi bi-share text-white"></i></button>
                    </div>

                    <div class="search-bar justify-self-center">
                        <input type="search" id="search-q" class="form-control" placeholder="Ingresa el nombre del video o la URL"> <button class="btn btn-dark" type="button" onclick="search()"><i class="bi bi-search"></i></button>
                    </div>

                    <div class="user text-white d-flex align-items-center">
                        <div class="fs-4">
                            <span id="user"><%= user.user%></span> <i class="bi bi-person-circle"></i>
                        </div>
                        <div class="dropdown ms-2">
                            <a class="dropdown-toggle text-white" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">

                            </a>
                          
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">
